{
    "operations": {
        "Who": {
            "httpMethod": "GET",
            "uri": "api/users",
            "summary": "List all users",
            "parameters": {
                "limit": {
                    "type": "integer",
                    "location": "query",
                    "default": 25,
                    "description": "number of position at collection"
                },
                "offset": {
                    "type": "integer",
                    "location": "query",
                    "default": 0,
                    "description": "number of position at collection"
                },
                "filters": {
                    "type": "string",
                    "location": "query",
                    "required": false,
                    "description": "filters to aply to the list"
                },
                "order": {
                    "type": "string",
                    "location": "query",
                    "required": false,
                    "description": "order of list criteria"
                }
            }
        },
        "ShowUser": {
            "httpMethod": "GET",
            "uri": "api/users/{id}",
            "summary": "Show a user by id",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                }
            }
        },
        "showUsersBlocked": {
            "httpMethod": "GET",
            "uri": "api/users/{id}/blocked",
            "summary": "Get blocked users of the session user",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                },
                "limit": {
                    "type": "integer",
                    "location": "query",
                    "default": 25,
                    "description": "number of position at collection"
                },
                "offset": {
                    "type": "integer",
                    "location": "query",
                    "default": 0,
                    "description": "number of position at collection"
                }
            }
        },
        "AddUserBlocked": {
            "httpMethod": "POST",
            "uri": "api/users/{id}/blocked",
            "summary": "Get blocked users of the session user",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                },
                "user_id": {
                    "location": "json",
                    "description": "User to bloked by ID",
                    "required": true
                }
            }
        },
        "DeleteUserBlocked": {
            "httpMethod": "DELETE",
            "uri": "api/users/{user_id}/blocked/{blocked_user_id}",
            "summary": "unblocks the given user for the session user",
            "parameters": {
                "user_id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                },
                "blocked_user_id": {
                    "location": "uri",
                    "description": "User to bloked by ID",
                    "required": true
                }
            }
        },
        "ShowUserProfile": {
            "httpMethod": "GET",
            "uri": "api/users/{id}/profiles",
            "summary": "show a profile",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to retrieve by ID",
                    "required": true
                }
            }
        },
        "AddUserProfile": {
            "httpMethod": "POST",
            "uri": "api/users/{id}/profiles",
            "summary": "show a profile",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to add profile by ID",
                    "required": true
                },
                "social_profile": {
                    "type": "object",
                    "required": true,
                    "location": "json",
                    "properties": {
                        "about": {
                            "location": "json",
                            "type": "string",
                            "required": true,
                            "description": "the about in profile"
                        },
                        "sexualOrientation": {
                            "location": "json",
                            "type": "string",
                            "required": true,
                            "description": "The sexualOrientation"
                        }
                    }
                }
            }
        },
        "UpdateUserProfile": {
            "httpMethod": "PATCH",
            "uri": "api/users/{id}/profiles",
            "summary": "show a profile",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to add profile by ID",
                    "required": true
                },
                "social_profile": {
                    "type": "object",
                    "required": true,
                    "location": "json",
                    "properties": {
                        "about": {
                            "location": "json",
                            "type": "string",
                            "description": "the about in profile"
                        },
                        "sexualOrientation": {
                            "location": "json",
                            "type": "string",
                            "description": "The sexualOrientation"
                        }
                    }
                }
            }
        },
        "AddUserReports":{
            "httpMethod": "POST",
            "uri": "api/users/{id}/report",
            "summary": "show a report",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to add profile by ID",
                    "required": true
                },
                "report":{
                    "type": "object",
                    "required": true,
                    "location": "json",
                    "properties": {
                        "reason": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "SetUserNick":{
            "httpMethod": "PUT",
            "uri": "api/users/{id}/nick",
            "summary": "set a users nick",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "User to set the nick",
                    "required": true
                },
                "nick":{
                    "type": "string",
                    "required": true,
                    "location": "json"
                }
            }
        },
        "ShowUserVisitors":{
            "httpMethod": "GET",
            "uri": "api/users/{id}/visitors",
            "summary": "show visit of one profile",
            "parameters": {
                "id": {
                    "location": "uri",
                    "type": "integer",
                    "required": true
                },
                "limit": {
                    "type": "integer",
                    "location": "query",
                    "default": 25,
                    "description": "number of position at collection"
                },
                "offset": {
                    "type": "integer",
                    "location": "query",
                    "default": 0,
                    "description": "number of position at collection"
                }
            }
        }
    }
}