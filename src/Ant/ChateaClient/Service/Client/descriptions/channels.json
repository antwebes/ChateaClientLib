{
    "operations": {
        "GetChannels":{
            "httpMethod": "GET",
            "uri": "api/channels/{id}",
            "summary": "List all the channels",
            "responseClass": "ChannelCollection",
            "parameters": {
                "page": {
                    "location": "uri",
                    "description": "number of position at collection",
                    "required": false,
                    "default": 1
                }
            }
        },
        "GetChannel":{
            "httpMethod": "GET",
            "uri": "api/channels/{id}",
            "summary": "Show a channel by id",
            "responseClass": "Channel",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "Channel to retrieve by ID",
                    "required": true
                }
            }
        },
        "AddChannel": {
            "httpMethod": "POST",
                "uri": "api/channels",
            "summary": "Creates a new Channel",
            "parameters": {
                    "name":{
                        "location": "json",
                        "type": "string"
                    },
                    "title":{
                        "location": "json",
                        "type": "string"
                    },
                    "description":{
                        "location": "json",
                        "type": "string"
                    }
                }
            },
            "errorResponses":{
                "name":{
                    "location": "json",
                    "type": "string"
                },
                "code":{
                    "location": "json",
                    "type": "integer"
                }
            }
        }
    },
    "models":{
        "Link":{
            "type": "array",
            "properties": {
                "items":{
                    "location": "json",
                    "type": "string"
                }
            }

        },
        "Links":{
            "type": "array",
            "properties": {
                "items":{
                    "$ref": "Link"
                }
            }
        },
        "Channel": {
            "type": "object",
            "properties": {
                "id":{
                    "location" : "json",
                    "type": "integer",
                    "required": true,
                    "description": "primary key"
                },
                "name":{
                    "location" : "json",
                    "type": "string",
                    "required": true,
                    "description": "the name of channel"
                },
                "url":{
                    "location" : "json",
                    "type": "string",
                    "required": true,
                    "description": "the name of channel"
                },
                "title":{
                    "location" : "json",
                    "type": "string",
                    "description": "The title of channel"
                },
                "description":{
                    "location" : "json",
                    "type": "string",
                    "description": "The title of channel"
                },
                "_links":{
                    "type": "array",
                    "items": {
                        "$ref": "Links"
                    }
                }
            }
        },"ChannelCollection":{
            "type": "object",
            "properties": {
                "total":{
                    "location" : "json",
                    "type": "integer",
                    "required": true,
                    "description": "total elements in collection"
                },
                "page":{
                    "location" : "json",
                    "type": "integer",
                    "required": true,
                    "description": "get page at collection"
                },
                "limit":{
                    "location" : "json",
                    "type": "integer",
                    "required": true,
                    "description": "number of elements for page"
                },
                "_links":{
                    "type": "array",
                    "items": {
                        "$ref": "Links"
                    }
                },
                "resources":{
                    "type": "array",
                    "items": {
                        "$ref": "Channel"
                    }
                }

            }
        }
    }
}