{
    "operations": {
        "GetChannels": {
            "httpMethod": "GET",
            "uri": "/api/channels",
            "summary": "List all the channels",
            "responseClass": "ChannelCollection",
            "parameters": {
                "page": {
                    "type": "integer",
                    "location": "query",
                    "default": 1,
                    "description": "number of position at collection"
                }
            }
        },
        "GetChannel": {
            "httpMethod": "GET",
            "uri": "/api/channels/{id}",
            "summary": "Show a channel by id",
            "responseClass": "Channel",
            "parameters": {
                "id": {
                    "location": "uri",
                    "description": "Channel to retrieve by ID",
                    "required": true
                }
            }
        },
        "UpdateChannel":{
            "httpMethod": "PUT",
            "uri": "/api/channels/{id}"
        },
        "AddChannel": {
            "httpMethod": "POST",
            "uri": "/api/channels",
            "summary": "Creates a new Product",
            "responseClass": "Channel",
            "parameters": {
                "channel": {
                    "type": "object",
                    "required": true,
                    "location": "json",
                    "properties": {
                        "name": {
                            "location": "json",
                            "type": "string",
                            "required": true,
                            "description": "the name of channel"
                        },
                        "title": {
                            "location": "json",
                            "type": "string",
                            "required": true,
                            "description": "The title of channel"
                        },
                        "description": {
                            "location": "json",
                            "type": "string",
                            "description": "The description of channel"
                        }
                    }
                }
            }
        }
    },
    "models": {
        "Links": {
            "type": "object",
            "location": "json",
            "properties": {
                "slef": {
                    "type": "object",
                    "location": "json",
                    "properties": {
                        "href":{
                            "type": "string",
                            "location": "json"
                        }
                    }
                },
                "fans": {
                    "type": "object",
                    "location": "json",
                    "properties": {
                        "href":{
                            "type": "string",
                            "location": "json"
                        }
                    }
                },
                "creator": {
                    "type": "object",
                    "location": "json",
                    "properties": {
                        "href":{
                            "type": "string",
                            "location": "json"
                        }
                    }
                }
            }
        },
        "ChannelType":{
            "type": "object",
            "properties": {
                "name": {
                    "location": "json",
                    "type": "string",
                    "description": "the name of channel"
                }
            }
        },
        "Channel": {
            "type": "object",
            "properties": {
                "name": {
                    "location": "json",
                    "type": "string",
                    "description": "the name of channel"
                },
                "title": {
                    "location": "json",
                    "type": "string",
                    "description": "the name of channel"
                },
                "description": {
                    "location": "json",
                    "type": "string",
                    "description": "the name of channel"
                },
                "channel_type":{
                    "$ref": "ChannelType"
                },
                "_links": {
                    "$ref": "Links"
                }
            }
        },
        "ChannelCollection": {
            "type": "object",
            "properties": {
                "total": {
                    "location": "json",
                    "type": "integer",
                    "description": "total elements in collection"
                },
                "page": {
                    "location": "json",
                    "type": "integer",
                    "description": "get page at collection"
                },
                "limit": {
                    "location": "json",
                    "type": "integer",
                    "description": "number of elements for page"
                },
                "_links": {
                    "$ref": "Links"
                },
                "resources": {
                    "type": "array",
                    "items": {
                        "$ref": "Channel"
                    }
                }

            }
        }
    }
}